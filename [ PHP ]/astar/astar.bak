        function findLeastNode(array $open) {
            $curr = null;

            $count = 0;
            foreach ($open as $node) {
                if ($count == 0) {
                    $curr =& $node;
                    $count++;
                    continue;
                }

                if ($curr['f'] < $node['f']) {
                    $curr =& $node;
                    break;
                }

                $count++;
            }

            return $curr;
        }

        function findNodeByLocation(array $loc) {
            for ($i = 0; $i < sizeof($this->nodes); $i++) {
                if ($this->nodes[$i]['loc']['lat'] == $loc['lat'] &&
                    $this->nodes[$i]['loc']['lon'] == $loc['lon']) {
                    return $this->nodes[$i];
                }
            }

            return null;
        }

