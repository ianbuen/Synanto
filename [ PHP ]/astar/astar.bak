    function addToList($node, array $list) {
        $list[] =& $node;
        return $list;
    }

    function removeFromList($node, array $list) {
        $index = 0;

        foreach ($list as $item) {
            if ($node['id'] == $item['id']) {
                array_splice($list, $index, 1);
                break;
            }

            $index++;
        }

        return $list;
    }

    function isInList($node, array $list) {
        foreach ($list as $listNode) {
            if ($node['id'] == $listNode['id']) {
                return true;
            }
        }

        return false;
    }

