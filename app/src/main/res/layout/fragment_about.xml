<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.eureka.synanto.fragments.AboutFragment"
    android:background="@drawable/lpu1_bgcut">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:background="@drawable/border"
        android:backgroundTintMode="add"
        android:id="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <ScrollView
            android:layout_width="320dp"
            android:layout_height="750dp"
            android:id="@+id/scrollView2">

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="450dp">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:text="@string/about"
                    android:textColor="#fff"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Developers"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:textColor="#fff"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:text="Ian Buenconsejo\n Mark Limbo\n Kenneth Luceros\n Kay Pa-a\n Bernard Pelobello "
                    android:gravity="center"
                    android:textColor="#fff"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="About SynantÃ³"
                    android:textSize="30dp"
                    android:textStyle="italic"
                    android:textColor="#fff"
                    android:id="@+id/textView2"
                    android:layout_marginTop="21dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="All Rights Reserved 2017"
        android:textColor="#fff"
        android:id="@+id/textView7"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />


</RelativeLayout>
