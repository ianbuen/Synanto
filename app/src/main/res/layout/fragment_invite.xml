<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eureka.synanto.fragments.InviteFragment">

    <ListView
        android:id="@+id/invite_list"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView4"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/invite_finish"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/invite_finish"
        android:text="Invite people"
        android:textStyle="normal|italic"
        android:textSize="25dp"
        android:fontFamily="Corbel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignRight="@+id/invite_finish"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/invite_finish" />

    <Button
        android:id="@+id/invite_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Finish"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/invite_eventID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/invite_list"
        android:layout_alignTop="@+id/textView4"
        android:text="Event ID:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignRight="@+id/invite_list" />

</RelativeLayout>