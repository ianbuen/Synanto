<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Event Details"
                    android:textStyle="normal|italic"
                    android:textSize="25dp"

                    android:fontFamily="Corbel"
                    android:id="@+id/textView8" />

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_leave"
                    android:src="@drawable/icon_delete"
                    android:layout_weight="2"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Event Name:"
                    android:layout_weight="1"
                    android:id="@+id/textView9" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/details_event_name" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Description:"
                    android:layout_weight="1"
                    android:id="@+id/textView10" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_weight="1"
                    android:id="@+id/details_desc" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Date:"
                    android:layout_weight="1"
                    android:id="@+id/textView11" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/details_date" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Time:"
                    android:layout_weight="1"
                    android:id="@+id/textView12" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/details_time" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Venue:"
                    android:layout_weight="1"
                    android:id="@+id/textView13" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/details_venue"
                    android:layout_weight="1"
                    android:entries="@array/venue">
                </Spinner>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="15dp">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_update"
                    android:text="Update Details"
                    android:background="@drawable/rounded_button"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:layout_margin="5dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Invite more"
                    android:background="@drawable/button_border"
                    android:textColor="#781219"
                    android:id="@+id/details_invite_more"
                    android:layout_weight="1"
                    android:layout_margin="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="People Attending:"
                    android:textStyle="normal|italic"
                    android:layout_span="2"
                    android:fontFamily="Corbel"
                    android:id="@+id/textView14"
                    android:textSize="22dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextViewAppearance"
                    android:layout_span="2"
                    android:textSize="20sp"
                    android:id="@+id/details_members"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="People Invited:"
                    android:textStyle="normal|italic"
                    android:layout_span="2"
                    android:fontFamily="Corbel"
                    android:id="@+id/textView15"
                    android:textSize="22dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextViewAppearance"
                    android:layout_span="2"
                    android:textSize="20sp"
                    android:id="@+id/details_invited"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="People Not Attending:"
                    android:textStyle="normal|italic"
                    android:layout_span="2"
                    android:fontFamily="Corbel"
                    android:id="@+id/textView26"
                    android:textSize="22dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextViewAppearance"
                    android:layout_span="2"
                    android:textSize="20sp"
                    android:id="@+id/details_declined"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>