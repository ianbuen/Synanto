<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_join_event_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextViewAppearance"
        android:textSize="24sp"
        android:layout_marginTop="5dp" />

    <TextView
    android:id="@+id/list_join_event_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/list_join_event_id"
    android:layout_marginStart="11dp"
    android:layout_marginLeft="11dp"
    android:layout_toRightOf="@+id/list_join_event_id"
    android:layout_alignBottom="@id/list_join_event_id"
    android:textAppearance="@style/TextViewAppearance"
    android:textSize="24sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/list_event_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/list_join_event_id"
        android:layout_toEndOf="@+id/list_join_event_id"
        android:layout_toRightOf="@+id/list_join_event_id" />

</RelativeLayout>