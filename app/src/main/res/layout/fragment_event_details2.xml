<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eureka.synanto.fragments.EventDetails" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Event Details"
                android:textStyle="normal|italic"
                android:textSize="25dp"
                android:fontFamily="Corbel"
                android:id="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />


            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_leave"
                android:layout_gravity="right"
                android:src="@drawable/icon_delete"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event Name:"
                android:id="@+id/textView9"
                android:layout_below="@+id/details_leave"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description:"
                android:id="@+id/textView10"
                android:layout_alignBottom="@+id/details_desc"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date:"
                android:id="@+id/textView11"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Time:"
                android:id="@+id/textView12"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Venue:"
                android:id="@+id/textView13"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <Spinner
                android:layout_width="395dp"
                android:layout_height="56dp"
                android:id="@+id/details_venue"
                android:entries="@array/venue"
                android:layout_below="@+id/textView12"
                android:layout_toEndOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView9">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="People Included:"
                android:textStyle="normal|italic"
                android:textSize="25dp"
                android:fontFamily="Corbel"
                android:id="@+id/textView14"
                android:layout_above="@+id/details_members"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="155dp"
                android:id="@+id/details_members"
                android:layout_below="@+id/details_invite_more"
                android:layout_alignEnd="@+id/details_invite_more"
                android:layout_alignRight="@+id/details_invite_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ID:"
                android:id="@+id/textView15"
                android:layout_alignBaseline="@+id/tvID"
                android:layout_alignBottom="@+id/tvID"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvID"
                android:layout_above="@+id/textView9"
                android:layout_toEndOf="@+id/textView15"
                android:layout_toRightOf="@+id/textView15"
                android:visibility="invisible" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_date"
                android:layout_above="@+id/details_time"
                android:layout_alignStart="@+id/details_time"
                android:layout_alignLeft="@+id/details_time" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_desc"
                android:layout_below="@+id/details_event_name"
                android:layout_alignStart="@+id/details_date"
                android:layout_alignLeft="@+id/details_date" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_time"
                android:layout_above="@+id/details_venue"
                android:layout_toEndOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView9" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_event_name"
                android:layout_below="@+id/tvID"
                android:layout_alignStart="@+id/details_date"
                android:layout_alignLeft="@+id/details_date" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_update"
                android:layout_below="@+id/details_venue"
                android:layout_alignEnd="@+id/details_venue"
                android:layout_alignRight="@+id/details_venue"
                android:text="Update Details"
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite more"
                android:background="@drawable/button_border"
                android:textColor="#781219"
                android:id="@+id/details_invite_more"
                android:layout_below="@+id/details_update"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="17dp"
                android:layout_alignLeft="@+id/details_update"
                android:layout_alignStart="@+id/details_update" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
